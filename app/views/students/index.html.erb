<div class="container py-5">
  <h1 class="text-center">All students</h1>
    <p class="pb-5 text-center"><%= link_to "Add new student here", new_student_path %></p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email Address</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Arrival</th>
          <th scope="col">Departure</th>
          <th scope="col">Placed</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <th scope="row"><%=student.id %></th>
            <td><%=student.first_name %></td>
            <td><%=student.last_name %></td>
            <td><%=student.email %></td>
            <td><%=student.phone_number %></td>
            <td><%=student.arrival_in_hawaii.strftime("%d/%m/%Y") %></td>
            <td><%=student.departure_from_hawaii.strftime("%d/%m/%Y") %></td>
            <td><% if student.stay_ids.blank? %>
              <i class="fa-solid fa-circle-xmark" style="color: #FD1015;"></i>
              <% else %>
              <i class="fa-solid fa-circle-check" style="color: #1EDD88;"></i>
            <% end %></td>
            <td><%= link_to "View more", student_path(student) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
