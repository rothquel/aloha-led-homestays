<%= simple_form_for(@student) do |f| %>
  <h4 class="pb-3">Student details:</h4>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :first_name, label: 'Student first name' %>
    </div>
    <div class="col-md-6">
        <%= f.input :last_name, label: 'Student last name' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
       <%= f.input :email, label: 'Student email address' %>
    </div>
    <div class="col-md-6">
        <%= f.input :phone_number, label: 'Student phone number' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
       <%= f.input :line_account, label: 'Student line account' %>
    </div>
    <div class="col-md-6">
        <%= f.input :gender, as: :select, collection: ['male', 'female'] %>
    </div>
  </div>
  <%= f.input :date_of_birth,
                as: :date,
                start_year: Date.today.year - 40,
                end_year: Date.today.year - 1,
                order: [:day, :month, :year] %>
  <%= f.input :home_address %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :occupation %>
    </div>
    <div class="col-md-6">
      <%= f.input :school_in_japan %>
    </div>
  </div>
  <hr>
  <h4 class="py-3">Emergency contact details:</h4>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :emergency_contact_name %>
    </div>
    <div class="col-md-6">
      <%= f.input :emergency_contact_relationship %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :emergency_contact_phone %>
    </div>
    <div class="col-md-6">
      <%= f.input :emergency_contact_email %>
    </div>
  </div>
  <hr>
    <h4 class="py-3">Stay details:</h4>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :host_family_preferences_pets,
            :as => :select,
            :collection => [['Yes',true],['No',false]],
            :include_blank => false,
            :label => "Can the stuent stay in a house with pets?" %>
    </div>
    <div class="col-md-6">
      <%= f.input :host_family_preferences_kids,
            :as => :select,
            :collection => [['Yes',true],['No',false]],
            :include_blank => false,
            :label => "Can the student stay in a house with other children under 18?" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :smoker,
            :as => :select,
            :collection => [['No',false],['Yes',true]],
            :include_blank => false,
            :label => "Does the student smoke?" %>
    </div>
    <div class="col-md-6" data-controller="student-form">
      <%= f.input :allergies,
        :as => :select,
        :collection => [['No', false], ['Yes', true]],
        :include_blank => false,
        :label => "Do they have any allergies?",
        data: { action: "change->student-form#toggleAllergyDetails" } %>
    </div>

    <div class="col-md-12" data-student-form-target="allergyDetails">
      <%= f.input :allergies_details, label: 'If yes, please provide details of the allergies' %>
    </div>
  </div>

  <%= f.input :hobbies, label: 'What are some of their main interests and hobbies?' %>
  <%= f.input :program_in_hawaii, label: 'What school or program are they attending (or planning to attend) in Hawaii?' %>
  <p><strong>If they have booked their flights, please enter the details below.</strong> If not, please enter the dates they are intending to be in Hawaii for.</p>
  <%= f.input :arrival_in_hawaii %>
  <%= f.input :arriving_flight_number %>
  <%= f.input :departure_from_hawaii %>
  <%= f.input :returning_flight_number %>
  <%= f.submit class: "btn btn-warning" %>
<% end %>
