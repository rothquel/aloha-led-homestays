<div class="container py-5">
  <p class="text-center small fw-bold">Host:</p>
  <h1 class="text-center"><%= @host.first_name %> <%= @host.last_name %></h1>
  <h4 class="text-center"><i class="fa-solid fa-phone fa-xs" style="color: #ffdd00;"></i> <%= @host.home_phone_number %> | <i class="fa-solid fa-envelope fa-xs" style="color: #ffdd00;"></i> <%= @host.email %></h4>
  <p class="text-center"><strong><%= @host.marital_status %></strong> | <strong>Age:</strong> <%= @age %> years | <strong>DOB:</strong> <%= @host.date_of_birth.strftime("%d/%m/%Y") %></p>
  <div class="text-center">
    <%= link_to "Edit host details", edit_host_path(@host) %> |
    <%= link_to "Delete host (and all connected rooms and stays)",
      host_path(@host),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure? Deleting this host will also delete any associated rooms and stays."}
    %>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <!-- First Half with Shaded Background -->
    <div class="col-lg-6 bg-darkgrey p-5 text-center text-white">
      <h2 class="pb-3">House Details:</h2>
      <p><strong>Address:</strong> <%= @host.home_address %></p>
      <p><strong>Children in home:</strong> <%= @host.children ? 'Yes' : 'No' %></p>
      <p><strong>Children list:</strong> <%= @host.children_list %></p>
      <p><strong>Other residents in house:</strong> <%= @host.other_residents %></p>
      <p><strong>Resident health concerns:</strong> <%= @host.health_concerns %></p>
      <p><strong>Pets in home:</strong> <%= @host.pets ? 'Yes' : 'No' %></p>
      <p><strong>Pet list:</strong> <%= @host.pets_list %></p>
      <p><strong>Internet access:</strong> <%= @host.internet_access ? 'Yes' : 'No' %></p>
      <p><strong>Smoker allowed:</strong> <%= @host.smoking_permitted ? 'Yes' : 'No' %></p>
      <p><strong>Student gender preference:</strong> <%= @host.student_gender_preference%></p>
    </div>
    <!-- Second Half -->
    <div class="col-lg-6 bg-lightgrey p-5 text-center">
      <h2 class="pb-3">Personal Details:</h2>
      <p><strong>Seconary phone number:</strong> <%= @host.work_phone_number %></p>
      <p><strong>Other languages spoken:</strong> <%= @host.languages%></p>
      <p><strong>Occupation:</strong> <%= @host.occupation %></p>
      <p><strong>Employer:</strong> <%= @host.employer %></p>
      <p><strong>Resident criminal record:</strong> <%= @host.criminal_background ? 'Yes' : 'No' %></p>
      <p><strong>Criminal record details:</strong> <%= @host.criminal_background_detail %></p>
      <p><strong>Family interests:</strong> <%= @host.special_interests %></p>
      <p><strong>Reason for hosting:</strong> <%= @host.reason %></p>
      <p><strong>Joined on:</strong> <%= @host.created_at.strftime("%B %e %Y") %></p>
      <p><strong>Agree to terms:</strong> <%= @host.agree_to_terms ? 'Yes' : 'No' %></p>
    </div>
  </div>
</div>
<div class="container py-5">
  <h1 class="text-center">Rooms:</h1>
  <p class="text-center pb-3"><%= link_to "Add room", new_host_room_path(@host) %></p>
  <div class="row">
    <% @host.rooms.each do |room| %>
      <div class="col-12 col-lg-3 g-3">
        <div class="card" style="width: 18rem;">
          <%= image_tag "bedroom.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= room.title %></h5>
              <p class="card-text"><%= room.description %></p>
              <%= link_to "View details", room_path(room), class: "btn btn-warning" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
